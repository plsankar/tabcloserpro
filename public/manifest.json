{
    "manifest_version": 3,
    "name": "Tab Closer Pro",
    "description": "Effortlessly close your browser tabs based on the website with Tab Closer Pro.",
    "version": "1.0.1",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}